<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12">
            <div style="margin-left: 10%; margin-right: 10%;">
                <h3>Your info</h3>
                <p style="margin-top: 40px;">Name</p>
                <p style="text-align: left; border-bottom: 2px solid black;">
                    <%= @user.first_name %>
                        <%= @user.last_name %>
                </p>
                <p>Phone</p>
                <p style="text-align: left; border-bottom: 2px solid black;">
                    <%= @user.phone %>
                </p>
                <p>Email</p>
                <p style="text-align: left; border-bottom: 2px solid black;">
                    <%= @user.email %>
                </p>
                <div class="text-center" style="margin-top: 50px;">
                    <p>
                        <%= link_to "EDIT PROFILE INFORMATION", edit_user_path, class: "btn upload-button", style: "background: black; color: white;" %>
                    </p>
                    <p>
                        <%= link_to "LOGOUT", destroy_user_session_path, method: :delete, class: "btn upload-button" %>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>