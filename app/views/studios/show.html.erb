<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12" style="width: 95%;">
            <h3 style="margin-top: 20px;">
                <%= @studio.name %>
            </h3>
            <% if (@studio.studio_image.attachments.present?) %>
                <div class="mx-auto d-block" id="studio-image" style="background-image: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.2)), url('<%= rails_blob_url(@studio.studio_image) %>'); background-position: center center; background-size: 100%;">
                </div>
                <% end %>
                    <p>
                        <%= @studio.address %>
                    </p>
        </div>
    </div>
</div>