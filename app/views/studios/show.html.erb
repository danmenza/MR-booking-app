<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12">
            <h3 style="margin-top: 20px;">
                <%= @studio.name %>
            </h3>
            <% if (@studio.studio_image.attachments.present?) %>
                <div class="mx-auto d-block" id="studio-image" style="background-image: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.2)), url('<%= cdn_for_studio(@studio.studio_image) %>'); background-position: center center; background-size: 100%;">
                </div>
                <% end %>
                    <% if @studio.artists.present? %>
                        <div>
                            <h3>Our Artists</h3>
                            <% @studio.artists.each do |artist| %>
                                <p>
                                    <%= artist.name %>
                                </p>
                                <% end %>
                        </div>
                        <% end %>
                            <p style="margin-top: 40px;">
                                <%= @studio.address %>
                            </p>
                            <div id="map" style="position: sticky; top:0;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
                            </div>
        </div>
    </div>
</div>