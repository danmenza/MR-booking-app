<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12">
            <h1 style="padding-top: 30px;">Tattoo artists near you</h1>
            <%= form_tag(artists_path, method: "get") do %>
                <%= text_field_tag(:query, nil, placeholder: "Search by city, tattoo style", style: "padding: 5px 20px 5px 20px; border: black 1px solid; width: 300px;") %>
                    <%= submit_tag("Search", class: "primary-button", style: "padding: 5px 20px 5px 20px; border: black 1px solid;") %>
                        <% end %>
                            <!-- <div class="input-group rounded" id="search-bar">
                <input type="search" name="query" id="query" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                <span class="input-group-text border-0" id="query">
                  <i class="fas fa-search"></i>
                </span>
            </div> -->
                            <% @artists.each do |artist| %>
                                <% if (artist.artist_artwork.attachments.present?) %>
                                    <%= link_to artist_path(artist), class: "card-text explore-artist" do %>
                                        <div class="mx-auto d-block" style="width: 100%; background-image: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.2)), url('<%= rails_blob_url(artist.artist_artwork.first) %>'); background-position: center center; background-size: 100%;">
                                            <div class="card-text">
                                                <p style="padding-top: 10px;">
                                                    <%= artist.name %>
                                                </p>
                                                <div style="margin-top: 30px;">
                                                    <p>
                                                        <%= artist.studio %>
                                                    </p>
                                                    <div>
                                                        <% artist.styles.split(", ").each do |style| %>
                                                            <div class="style-div">
                                                                <span><%= style %></span>
                                                            </div>
                                                            <% end %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% end %>
                                            <% end %>
                                                <% end %>
        </div>
    </div>
</div>