<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-6 col-md-8 col-sm-12" style="width: 95%;">
            <h3 style="margin-top: 20px;">
                <%= @artist.name %>
            </h3>
            <div style="margin-left: 10px; margin-bottom: 20px;">
                <h6 style="margin-top: 20px;">
                    <%= @artist.studio %>
                </h6>
                <% if @artist.instagram_handle %>
                    <h6 style="margin-top: 20px;">
                        <!-- need to see if this url structure works for hitting instagram artist page -->
                        <a href="https://www.instagram.com/<%= @artist.instagram_handle %>" style="text-decoration: none; color: black;">@<%= @artist.instagram_handle %></a>
                    </h6>
                    <% end %>
                        <span>Style</span>
                        <span class="leaf-icon"></span>
                        <span>
                        <%= @artist.styles.join(", ") %>
                    </span>
                        <!-- <p style="margin-top: 5px;">
                    Price minimum
                    <%= number_to_currency(@artist.minimum) %>
                </p> -->
            </div>
            <div class="image-card">
                <% if (@artist.artist_artwork.attachments.present?) %>
                    <% @artist.artist_artwork.each do |artwork| %>
                        <div class="image-item"><img class="artist-images" style="background-position: center center; background-size: 100%;" src="<%= rails_blob_url(artwork) %>"></div>
                        <% end %>
                            <% end  %>
            </div>
            <div class="text-center" style="margin-top: 40px; margin-bottom: 40px;">
                <p>
                    <%= link_to "REQUEST APPOINTMENT", new_artist_reservation_path(@artist), class: "primary-button", style: "display: block;" %>
                </p>
                <p>
                    <%= link_to "Back to artist explore", root_path, class: "secondary-button" %>
                </p>
            </div>
        </div>
    </div>
</div>