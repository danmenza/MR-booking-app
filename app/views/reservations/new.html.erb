<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h3 class="text-center">New Reservation</h3>
            <%= simple_form_for [@artist, @reservation] do |f| %>
                <%= f.input :tattoo_placement %>
                    <br>
                    <%= f.input :artwork, as: :file, input_html: { multiple: true } %>
                        <br>
                        <%= f.input :body_area, as: :file, input_html: { multiple: true } %>
                            <br>
                            <%= f.input :cover_up %>
                                <%= f.input :color %>
                                    <%= f.input :description %>
                                        <%= f.input :appt_date %>
                                            <div class="text-center">
                                                <br>
                                                <p>
                                                    <%= f.submit "BOOK APPOINTMENT", class: "primary-button" %>
                                                </p>
                                                <% end %>
                                                    <p>
                                                        <%= link_to "Cancel", root_path, class: "secondary-button" %>
                                                    </p>
                                            </div>
        </div>
    </div>
</div>