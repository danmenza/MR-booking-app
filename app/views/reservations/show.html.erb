<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6 text-center">
            <h3 class="confirmation-header">Tattoo appointment request confirmed!</h3>
            <h3 class="confirmation-header">An email to connect you with your artist is on the way!</h3>
            <% if (@reservation.artwork.attachments.present?) %>
                <% @reservation.artwork.each do |artwork| %>
                    <div class="mx-auto d-block" style="height: 400px; width: 400px; background-image: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0)), url('<%= rails_blob_url(artwork) %>'); background-position: center center; background-size: 100%;">
                    </div>
                    <% end %>
                        <% end  %>
                            <% if (@reservation.body_area.attachments.present?) %>
                                <% @reservation.body_area.each do |image| %>
                                    <div class="mx-auto d-block" style="height: 400px; width: 400px; background-image: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0)), url('<%= rails_blob_url(image) %>'); background-position: center center; background-size: 100%;">
                                    </div>
                                    <% end %>
                                        <% end  %>
                                            <br>
                                            <p>
                                                <%= @reservation.artist.studio %>
                                            </p>
                                            <p>
                                                <%= @reservation.artist.name %>
                                            </p>
                                            <p>
                                                Date availability:
                                                <%= @reservation.appt_start %> to
                                                    <%= @reservation.appt_end %>
                                            </p>
        </div>
    </div>
</div>